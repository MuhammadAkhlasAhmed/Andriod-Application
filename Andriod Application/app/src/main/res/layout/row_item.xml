<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:padding="2dp" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/member_name" android:textSize="20sp" android:text="txt" android:paddingBottom="10dp"  android:layout_marginTop="10dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/status" android:textSize="16sp" android:text="txt" android:layout_below="@+id/member_name" android:layout_alignLeft="@+id/member_name"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/contact_type" android:textSize="16sp" android:text="txt" android:layout_alignParentRight="true" android:layout_alignBottom="@+id/member_name" android:layout_alignBaseline="@+id/member_name"/>

</RelativeLayout>