<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:padding="2dp" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/moviename" android:textSize="20sp" android:text="txt" android:paddingBottom="10dp"  android:layout_marginTop="10dp"

        android:background="#000000"
        android:textColor="#fff"
        />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/status"
        android:textSize="16sp"
        android:background="#000000"
        android:textColor="#fff"
        android:text="txt" android:layout_below="@+id/moviename" android:layout_alignLeft="@+id/moviename"/>

    <TextView android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#fff"
        android:layout_width="wrap_content" android:id="@+id/contact_type" android:textSize="16sp" android:text="txt" android:layout_alignParentRight="true" android:layout_alignBottom="@+id/moviename" android:layout_alignBaseline="@+id/moviename"/>

</RelativeLayout>